<h1>Add a New Book</h1>

<% if @book.errors.any? %>
<ul class='errors'>
<% @book.errors.full_messages.each do |message| %>
  <li class="error"><%= message %></li>
<% end %>
</ul>
<% end %>

<section>
  <%= form_for @book do |f| %>
    <p><%= f.label :title %><br />
    <%= f.text_field :title %><br />

    <%= label_tag :authors, 'Author(s)' %><br />
    <%= text_field_tag :authors, @authors %><br />

    <%= f.label :pages %><br />
    <%= f.number_field :pages %><br />

    <%= f.label :year_published %><br />
    <%= f.number_field :year_published %><br />

    <%= f.label :thumbnail %><br />
    <%= f.text_field :thumbnail %><br /></p>
    <p><%= f.submit %></p>
  <% end %>
</section>

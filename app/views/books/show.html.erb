<section id='book-details'>
  Title:  <%= @book.title %><br />
  Author: <% @book.authors.each do |author| %>
    <%= link_to author.name, author_path(author) %>
  <% end %><br />
  Pages: <%= @book.pages %><br />
  Year Published: <%= @book.year_published %><br />
  <img src="<%= @book.thumbnail %>" /><br />
  Average Rating: <%= @book.average_rating.round(2) %>
</section>

<section id='top-reviews'>
  <h1>Top Reviews:</h1>
  <% @top_reviews.each do |review| %>
    Title: <%= review.title %><br />
    User: <%= review.user %><br />
    Rating: <%= review.rating %><br />
  <% end %>
</section>

<section id='bottom-reviews'>
  <h1>Lowest Reviews:</h1>
  <% @bottom_reviews.each do |review| %>
    Title: <%= review.title %><br />
    User: <%= review.user %><br />
    Rating: <%= review.rating %><br />
  <% end %>
</section>
